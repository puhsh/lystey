= render partial: 'shared/admin_nav'

= nested_form_for @agent, html: { class: 'form' } do |f|
  = hidden_field_tag :from_section, 'testimonials'
  .section
    .container
      .row
        .twelve.columns
          %h1.section-heading Testimonial Page Content
          = f.fields_for :theme do |t|
            = t.text_field :testimonial_page_title, placeholder: 'Testimonial Page Title...', class: 'u-full-width'
            = t.text_area :testimonial_page_main_copy, rows: 20, placeholder: 'Testimonial Page Copy...', class: 'u-full-width'
      .row
        .twelve.columns
          %h1.section-heading Client Testimonials
          = f.fields_for :testimonials do |t|
            = t.text_field :client_name, placeholder: 'Client Name'
            = t.link_to_remove class: 'primary-link' do
              %i.fa.fa-trash-o.fa-2x

            = t.text_area :text, rows: 20, placeholder: 'Testimonial Text...', class: 'u-full-width'
            = t.text_field :client_facebook_link, placeholder: 'Client Facebook Link (Optional)', class: 'u-full-width'

      .row
        .twelve.columns.center
          = f.link_to_add "+ Add Another Testimonial", :testimonials, class: 'add-field'

  .section.shaded.submit-section
    .container
      .row
        .twelve.columns
          = f.submit 'Save Changes', class: 'button button-primary button-submit u-full-width'
