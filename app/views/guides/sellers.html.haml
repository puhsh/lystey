.section.bordered-bottom
  .container.medium-fixed
    .row
      .twelve.columns
        %h1.section-heading.text-centered= @sellers_guide.guide_title
        %p= @sellers_guide.content
- if @testimonials.present?
  .section.bordered-bottom
    .container.medium-fixed
      .row
        .twelve.columns
          %h1.section-heading.text-centered Testimonials
      - @testimonials.each do |testimonial|
        .row
          .twelve.columns
            %p= "\"#{testimonial.text}\""
        .row
          .twelve.columns
            %p.text-centered.bolded= "- #{testimonial.client_name}"
      - if @testimonials_count > 3
        .row
          .twelve.columns
            = link_to 'View All', agent_testimonials_path(@agent), class: 'u-full-width button button-secondary'
.section
  .container.centered.medium-fixed
    .row
      .twelve.columns
        %h1.section-heading.text-centered Get started selling?
    .row
      = render 'shared/contact_agent_form'
